
<div class="grid grid-cols-2 content-center">
  <%= link_to "Back to Homepage", root_path %>
  <%= link_to "Edit Post", edit_blog_post_path(@blog_post) if user_signed_in? %>
</div>
  <%= image_tag @blog_post.cover_image, class: "w-1/3 mx-auto" if @blog_post.cover_image.present? %>
<div class="mt-2 mb-6 bg-[#FFFFFF9A] p-2 rounded-md">
  <h1 class="mb-2"><%= @blog_post.title %></h1>
  <% if @blog_post.published_at %>
  <p class="my-2"><%= @blog_post.published_at.strftime("%F") %></p>
  <% end %>
  <%= @blog_post.content %>
</div>
